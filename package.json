{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap-cloud-sdk/http-client": "^2.14.0",
    "@sap/cds": "^6",
    "@sap/cds-mtxs": "^1",
    "@sap/xssec": "^3.2.14",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run",
    "deploy": "mbt build && cf deploy mta_archives/bookshop_1.0.0.mtar --retries 0",
    "undeploy": "cf undeploy bookshop --delete-services --delete-service-keys --delete-service-brokers --retries 0",
    "xsuaa": "cds bind -2 bookshop-auth --kind xsuaa --profile hybrid"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "[development]": {
        "multitenancy": false,
        "db": {
          "kind": "sql"
        }
      },
      "[production]": {
        "multitenancy": true,
        "db": {
          "kind": "hana-mt"
        },
        "auth": {
          "kind": "xsuaa"
        },
        "approuter": {
          "kind": "cloudfoundry"
        }
      },
      "[mtx]": {
        "comment": "local testing with cds w --profile mtx",
        "multitenancy": true,
        "db": {
          "kind": "sql-mt"
        }
      },
      "NorthWind": {
        "kind": "odata",
        "model": "srv/external/NorthWind",
        "credentials": {
          "[production]": {
            "destination": "NorthWind"
          },
          "[hybrid]": {
            "destination": "NorthWind"
          },
          "[development]": {
            "url": "https://services.odata.org/Experimental/OData/OData.svc"
          }
        }
      }
    }
  }
}
